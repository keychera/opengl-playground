{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: g++.exe build active file",
      "command": "g++",
      "args": [
        "-g",
        "${fileBasenameNoExtension}.cpp",
        "glad.c",
        "stb_image.cpp",
        "util.cpp",
        "-o",
        "build/${fileBasenameNoExtension}.o",
        "-I",
        "${workspaceFolder}/c++/include",
        "-L",
        "${workspaceFolder}/c++/lib",
        "-L",
        "/usr/local/lib",
        "-lglfw",
        // "-lopengl32",
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        "make build dir"
      ]
    },
    {
      "type": "shell",
      "label": "C/C++: emcc build to js",
      "command": "emcc",
      "args": [
        "${fileBasenameNoExtension}.cpp",
        "util_em.cpp",
        "-o",
        "build/em/${fileBasenameNoExtension}.js",
        "-std=c++11",
        "-s",
        "WASM=1",
        "-s",
        "USE_SDL=2",
        "-s",
        "USE_SDL_IMAGE=2 ",
        "-s",
        "SDL2_IMAGE_FORMATS=\"[\"\"png\"\"]\"",
        "-s",
        "MODULARIZE=1",
        "-s",
        "INITIAL_MEMORY=64MB",
        "-s",
        "EXPORT_NAME=\"glModule\"",
        "-O2",
        "-I",
        "${env:MINGW_HOME}/include",
        "--preload-file",
        "emscripten",
        "--use-preload-plugins"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        "copy skeleton html to build/em"
      ]
    },
    {
      "type": "shell",
      "label": "copy skeleton html to build/em",
      "command": "cp",
      "args": [
        "./html/${fileBasenameNoExtension}.index.html",
        "./build/em/${fileBasenameNoExtension}.index.html"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "dependsOn": [
        "make em build dir"
      ]
    },
    {
      "type": "shell",
      "label": "make build dir",
      "command": "bb",
      "args": [
        "-e",
        "(babashka.fs/create-dirs \"./build\")"
      ],
      "options": {
        "cwd": "${fileDirname}"
      }
    },
    {
      "type": "shell",
      "label": "make em build dir",
      "command": "bb",
      "args": [
        "-e",
        "(babashka.fs/create-dirs \"./build/em\")"
      ],
      "options": {
        "cwd": "${fileDirname}"
      }
    },
    {
      "type": "shell",
      "label": "serve build dir",
      "command": "python",
      "args": [
        "-m",
        "http.server",
        "8080"
      ],
      "options": {
        "cwd": "${fileDirname}/build"
      },
      "dependsOn": [
        "make build dir"
      ]
    },
    {
      "type": "shell",
      "label": "serve build/em dir",
      "command": "python",
      "args": [
        "-m",
        "http.server",
        "8080"
      ],
      "options": {
        "cwd": "${fileDirname}/build/em"
      },
      "dependsOn": [
        "make em build dir"
      ]
    },
    {
      "type": "shell",
      "label": "em files to react",
      "command": "scripts\\em_to_react.sh",
      "args": [
        "${fileBasenameNoExtension}",
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}